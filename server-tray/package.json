{
  "name": "photosync-server-tray",
  "version": "1.0.0",
  "description": "PhotoSync Server - System Tray Manager",
  "author": "PhotoSync",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.photosync.server.tray",
    "productName": "PhotoSync Server",
    "files": [
      "main.js",
      "icon.png",
      "icon-template.png",
      "../server/**/*",
      "!../server/node_modules",
      "!../server/uploads",
      "!../server/backup.db"
    ],
    "extraResources": [
      {
        "from": "../server",
        "to": "server",
        "filter": ["**/*", "!node_modules", "!uploads", "!backup.db"]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png",
      "category": "Utility"
    }
  },
  "dependencies": {
    "electron-store": "^8.3.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
