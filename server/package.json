    "type": "git",
    "url": "https://github.com/viktorvishyn369/PhotoSync.git"
  },
  "bugs": {
    "url": "https://github.com/viktorvishyn369/PhotoSync/issues"
  },
  "homepage": "https://github.com/viktorvishyn369/PhotoSync#readme",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0"
