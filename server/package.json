{
  "name": "photosync-server",
  "version": "1.0.5",
  "description": "PhotoSync Server - Self-hosted photo backup server with auto-restart and firewall configuration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "update": "node -e \"require('./updater').downloadAndInstall()\"",
    "check-update": "node -e \"require('./updater').checkForUpdates().then(r => console.log(r))\"",
    "install-linux": "sudo bash install-linux.sh",
    "install-macos": "bash install-macos.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "photo-backup",
    "self-hosted",
    "privacy",
    "decentralized",
    "cloud-storage",
    "mobile-backup"
  ],
  "author": "PhotoSync Contributors",
